<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.frame.business.entity">
	<class
		name="EmpImageFile"
		table="emp_image_file"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="Id"
			type="integer"
			column="emp_image_file_id"
		>
			<generator class="sequence"/>
		</id>

		<property
			name="ImageName"
			column="image_name"
			type="string"
			not-null="false"
			length="50"
		/>
		<property
			name="ImageType"
			column="image_type"
			type="string"
			not-null="false"
			length="50"
		/>
		<property
			name="ImageContentType"
			column="image_content_type"
			type="string"
			not-null="false"
			length="50"
		/>
		<!-- please tell Joe Hudson that the type 'LONGBLOB' could not be resolved.. defaulting to java.lang.String -->
		<property
			name="ImageData"
			column="image_data"
			type="java.lang.String"
			not-null="false"
		/>
		<property
			name="ImageSize"
			column="image_size"
			type="integer"
			not-null="false"
			length="10"
		/>
		<many-to-one
			name="Employee"
			column="employee_id"
			class="Employee"
			not-null="true"
		>
		</many-to-one>


	</class>	
</hibernate-mapping>